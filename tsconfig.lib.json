{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
        "target": "ES2017",
        "strict": true,
        "lib": [
            "ES2017"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true
    },
	"include": ["src/*", "src/**/*"],
    "exclude": [
        "/**/*.spec.ts",
        "/*.spec.ts",
		"tests",
		"*/tests"
    ]
}
