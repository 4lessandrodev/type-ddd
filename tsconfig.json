{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"target": "ES2017",
		"strict": true,
		"lib": ["ES2017"],
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"baseUrl": "./",
		"composite": true,
		"paths": {
			"@types-ddd": ["lib/index"]
		}
	},
	"include": ["lib/*", "lib/**/*", "example", "tests", "types", "packages/*"],
	"references": [
		{
			"path": "./packages/cpf"
		},
		{
			"path": "./packages/logger"
		}
	]
}
