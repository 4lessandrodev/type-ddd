{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"useUnknownInCatchVariables": false,
		"target": "ES2021",
		"sourceMap": true,
		"allowJs": false,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"types-ddd/cpf": ["./packages/cpf"],
			"types-ddd/logger": ["./packages/logger"]
		}
	},
	"include": ["packages/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
