{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"useUnknownInCatchVariables": false,
		"target": "ES2021",
		"sourceMap": true,
		"allowJs": false,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@type-ddd/cnpj": ["./packages/cnpj"],
			"@type-ddd/cpf": ["./packages/cpf"],
			"@type-ddd/date": ["./packages/date"],
			"@type-ddd/email": ["./packages/email"],
			"@type-ddd/logger": ["./packages/logger"],
			"@type-ddd/money": ["./packages/money"],
			"@type-ddd/password": ["./packages/password"],
			"@type-ddd/patterns": ["./packages/patterns"],
			"@type-ddd/phone": ["./packages/phone"],
			"@type-ddd/core": ["./packages/type-ddd"],
			"@type-ddd/username": ["./packages/username"],
			"@type-ddd/zip-code": ["./packages/zip-code"]
		}
	},
	"include": ["packages/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "__tests__"]
}
