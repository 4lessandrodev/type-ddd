{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"target": "ES2017",
		"strict": true,
		"lib": [
			"ES2017"
		],
		"sourceMap": false,
		"outDir": "./dist",
		"esModuleInterop": true,
		"composite": true
	},
	"include": [
		"*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"tests"
	]
}